#!/usr/bin/env ruby
require 'date'
require 'trollop'
require File.expand_path(File.join(File.dirname(__FILE__), '../lib/planner_application'))

opts = Trollop.options do
  opt :date, "Date this planner should include (planner will start on the Monday of the week that includes that date)", type: :string, default: Date.today.strftime("%F")
  opt :filename, "Output filename", type: :string, default: 'planner_sheet.pdf'
end

PlannerApplication.create klass: Planner, date: opts[:date], filename: opts[:filename]
